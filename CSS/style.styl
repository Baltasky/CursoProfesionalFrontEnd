@import 'nib'
@import 'nib/gradients'

naranja = #DD4F24
azul = #22bce0
gris_oscuro = #444

body 
    background #E8E8E8
    color gris_oscuro 
    font-family Arial
    font-size  16px

header
    background gris_oscuro
    color white
    padding 0.5em

    .logo
        float  left  
        border-right 1px solid azul
        width  60px

        img 
            width  52px

    .titular
        margin 0 60px 0 70px
        .titulo
            font-size  18px
            font-weight  normal 
    
        .filtro
            text-decoration none
            font-size 14px
            color azul
            font-style italic
            font-weight bold
        
        .publicar 
            background-color naranja
            color white
            padding 0.2em 0.5em 
            text-decoration none
            font-style italic
            text-shadow 1px 1px 0px black
            float right 
            margin -5px 1em 0 0 

    .user
        position absolute
        right 10px
        top 10px

        .avatar
            margin 0 1em 0 0
            position relative
            z-index 2
            
            img
                width  50px
                border-radius 50%

        .flechita
                background naranja
                color white
                display block 
                text-align  right
                position absolute
                top 15px
                right 0px
                width  50%
                padding 3px
        

nav
    background azul

    .menu
       margin 0px
       li
        text-decoration none
        display inline-block
        

